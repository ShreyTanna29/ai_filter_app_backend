// Try Prisma Accelerate: https://pris.ly/cli/accelerate-init

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  password     String
  role         String
  totpSecret   String? // Secret key for TOTP 2FA (encrypted)
  totpEnabled  Boolean       @default(false) // Whether 2FA is enabled
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  sessions     Session[]
  refreshToken RefreshToken?
}

model Session {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int      @unique
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime @default(dbgenerated("(now() + interval '7 days')"))
}

model GeneratedVideo {
  id        Int      @id @default(autoincrement())
  feature   String
  url       String // Cloudinary URL
  audioUrl  String? // Optional audio URL for this video
  createdAt DateTime @default(now())

  apps AppGeneratedVideo[]

  @@index([feature, createdAt])
}

model Category {
  id            Int           @id @default(autoincrement())
  name          String
  templates     Template[]
  subcategories Subcategory[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Photo_Category {
  id                 Int                          @id @default(autoincrement())
  name               String
  photoTemplates     Photo_Template[]
  photoSubcategories Photo_Template_Subcategory[]
  createdAt          DateTime                     @default(now())
  updatedAt          DateTime                     @updatedAt
}

model Subcategory {
  id         Int            @id @default(autoincrement())
  name       String
  category   Category       @relation(fields: [categoryId], references: [id])
  categoryId Int
  template   Template       @relation(fields: [templateId], references: [id])
  templateId Int
  steps      TemplateStep[]
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  @@index([categoryId])
  @@index([templateId])
}

model Template {
  id            Int                 @id @default(autoincrement())
  name          String
  description   String?
  categoryId    Int?
  category      Category?           @relation(fields: [categoryId], references: [id])
  subcategories Subcategory[]
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
  stepVideos    TemplateStepVideo[]

  @@index([categoryId])
}

model TemplateStep {
  id            Int         @id @default(autoincrement())
  subcategory   Subcategory @relation(fields: [subcategoryId], references: [id], onDelete: Cascade)
  subcategoryId Int
  endpoint      String // The API endpoint to call
  prompt        String // Custom prompt for this step
  order         Int // Order of execution
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([subcategoryId, order])
}

model TemplateStepVideo {
  id         Int      @id @default(autoincrement())
  templateId Int
  stepIndex  Int
  endpoint   String
  videoUrl   String
  createdAt  DateTime @default(now())

  template Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
}

// Photo Template Models (mirroring video template structure)
model Photo_Template {
  id            Int                         @id @default(autoincrement())
  name          String
  description   String?
  categoryId    Int?
  category      Photo_Category?             @relation(fields: [categoryId], references: [id])
  subcategories Photo_Template_Subcategory[]
  createdAt     DateTime                    @default(now())
  updatedAt     DateTime                    @updatedAt
  stepPhotos    Photo_Template_Step_Photo[]

  @@index([categoryId])
}

model Photo_Template_Subcategory {
  id         Int                    @id @default(autoincrement())
  name       String
  category   Photo_Category         @relation(fields: [categoryId], references: [id])
  categoryId Int
  template   Photo_Template         @relation(fields: [templateId], references: [id])
  templateId Int
  steps      Photo_Template_Step[]
  createdAt  DateTime               @default(now())
  updatedAt  DateTime               @updatedAt

  @@index([categoryId])
  @@index([templateId])
}

model Photo_Template_Step {
  id            Int                        @id @default(autoincrement())
  subcategory   Photo_Template_Subcategory @relation(fields: [subcategoryId], references: [id], onDelete: Cascade)
  subcategoryId Int
  endpoint      String // The photo filter API endpoint to call
  prompt        String // Custom prompt for this step
  order         Int // Order of execution
  createdAt     DateTime                   @default(now())
  updatedAt     DateTime                   @updatedAt

  @@index([subcategoryId, order])
}

model Photo_Template_Step_Photo {
  id         Int            @id @default(autoincrement())
  templateId Int
  stepIndex  Int
  endpoint   String
  photoUrl   String
  createdAt  DateTime       @default(now())

  template Photo_Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
}

model Features {
  id        Int      @id @default(autoincrement())
  endpoint  String   @unique
  prompt    String
  model     String?  @default("pixverse-v5-image-to-video")
  isActive  Boolean  @default(true)
  status    String   @default("not-completed") // "completed", "not-completed", "needs-more-videos"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  apps AppFeature[]

  @@index([endpoint, createdAt])
}

model Photo_Features {
  id        Int      @id @default(autoincrement())
  endpoint  String   @unique
  prompt    String
  model     String?  @default("flux-schnell")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  apps AppPhotoFeature[]

  @@index([endpoint, createdAt])
}

model Generated_Photo {
  id        Int                 @id @default(autoincrement())
  feature   String
  url       String // Cloudinary URL
  createdAt DateTime            @default(now())
  apps      AppGeneratedPhoto[]

  @@index([feature, createdAt])
}

model App {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  apiKey    String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Permission relationships
  allowedFeatures          AppFeature[]
  allowedPhotoFeatures     AppPhotoFeature[]
  allowedVideos            AppGeneratedVideo[]
  allowedPhotos            AppGeneratedPhoto[]
  allowedCartoonCharacters AppCartoonCharacter[]
  allowedCartoonVideos     AppGeneratedCartoonVideo[]
  apiLogs                  AppApiLog[]
}

// API call logs for tracking app usage
model AppApiLog {
  id           Int      @id @default(autoincrement())
  app          App      @relation(fields: [appId], references: [id], onDelete: Cascade)
  appId        Int
  endpoint     String // The filter/feature endpoint that was called
  featureType  String // "video", "photo", "cartoon"
  model        String? // The AI model used
  status       String // "success", "error"
  errorMessage String? // Error message if failed
  responseTime Int? // Response time in milliseconds
  createdAt    DateTime @default(now())

  @@index([appId])
  @@index([appId, createdAt])
  @@index([endpoint])
}

// Junction table for App <-> Features (video filters)
model AppFeature {
  id        Int      @id @default(autoincrement())
  app       App      @relation(fields: [appId], references: [id], onDelete: Cascade)
  appId     Int
  feature   Features @relation(fields: [featureId], references: [id], onDelete: Cascade)
  featureId Int
  createdAt DateTime @default(now())

  @@unique([appId, featureId])
  @@index([appId])
  @@index([featureId])
}

// Junction table for App <-> Photo_Features (photo filters)
model AppPhotoFeature {
  id             Int            @id @default(autoincrement())
  app            App            @relation(fields: [appId], references: [id], onDelete: Cascade)
  appId          Int
  photoFeature   Photo_Features @relation(fields: [photoFeatureId], references: [id], onDelete: Cascade)
  photoFeatureId Int
  createdAt      DateTime       @default(now())

  @@unique([appId, photoFeatureId])
  @@index([appId])
  @@index([photoFeatureId])
}

// Junction table for App <-> GeneratedVideo
model AppGeneratedVideo {
  id               Int            @id @default(autoincrement())
  app              App            @relation(fields: [appId], references: [id], onDelete: Cascade)
  appId            Int
  generatedVideo   GeneratedVideo @relation(fields: [generatedVideoId], references: [id], onDelete: Cascade)
  generatedVideoId Int
  createdAt        DateTime       @default(now())

  @@unique([appId, generatedVideoId])
  @@index([appId])
  @@index([generatedVideoId])
}

// Junction table for App <-> Generated_Photo
model AppGeneratedPhoto {
  id               Int             @id @default(autoincrement())
  app              App             @relation(fields: [appId], references: [id], onDelete: Cascade)
  appId            Int
  generatedPhoto   Generated_Photo @relation(fields: [generatedPhotoId], references: [id], onDelete: Cascade)
  generatedPhotoId Int
  createdAt        DateTime        @default(now())

  @@unique([appId, generatedPhotoId])
  @@index([appId])
  @@index([generatedPhotoId])
}

// Cartoon Characters feature model
model Cartoon_Characters {
  id        Int      @id @default(autoincrement())
  endpoint  String   @unique
  prompt    String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  apps AppCartoonCharacter[]

  @@index([endpoint, createdAt])
}

// Generated cartoon videos table
model Generated_Cartoon_Video {
  id        Int      @id @default(autoincrement())
  feature   String
  url       String // S3 URL
  createdAt DateTime @default(now())

  apps AppGeneratedCartoonVideo[]

  @@index([feature, createdAt])
}

// Cartoon character graphic (selected video for card display)
model CartoonCharacterGraphic {
  id         Int      @id @default(autoincrement())
  endpoint   String   @unique
  graphicUrl String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

// Junction table for App <-> Cartoon_Characters
model AppCartoonCharacter {
  id                 Int                @id @default(autoincrement())
  app                App                @relation(fields: [appId], references: [id], onDelete: Cascade)
  appId              Int
  cartoonCharacter   Cartoon_Characters @relation(fields: [cartoonCharacterId], references: [id], onDelete: Cascade)
  cartoonCharacterId Int
  createdAt          DateTime           @default(now())

  @@unique([appId, cartoonCharacterId])
  @@index([appId])
  @@index([cartoonCharacterId])
}

// Junction table for App <-> Generated_Cartoon_Video
model AppGeneratedCartoonVideo {
  id                      Int                     @id @default(autoincrement())
  app                     App                     @relation(fields: [appId], references: [id], onDelete: Cascade)
  appId                   Int
  generatedCartoonVideo   Generated_Cartoon_Video @relation(fields: [generatedCartoonVideoId], references: [id], onDelete: Cascade)
  generatedCartoonVideoId Int
  createdAt               DateTime                @default(now())

  @@unique([appId, generatedCartoonVideoId])
  @@index([appId])
  @@index([generatedCartoonVideoId])
}

// Photo Packs feature - themed collections of generated photos
model Photo_Pack {
  id          Int               @id @default(autoincrement())
  name        String
  description String?
  emoji       String?           @default("ðŸ“¸")
  photoCount  Int               @default(15)
  isActive    Boolean           @default(true)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  prompts     Photo_Pack_Prompt[]
  images      Photo_Pack_Image[]
}

model Photo_Pack_Prompt {
  id        Int        @id @default(autoincrement())
  pack      Photo_Pack @relation(fields: [packId], references: [id], onDelete: Cascade)
  packId    Int
  prompt    String
  order     Int
  createdAt DateTime   @default(now())

  @@index([packId, order])
}

model Photo_Pack_Image {
  id        Int        @id @default(autoincrement())
  pack      Photo_Pack @relation(fields: [packId], references: [id], onDelete: Cascade)
  packId    Int
  url       String     // S3 URL
  createdAt DateTime   @default(now())

  @@index([packId, createdAt])
}
